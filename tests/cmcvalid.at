AT_SETUP([Parse-CMC])
cp ${abs_srcdir}/examples/PetersonLeader.maude .
AT_DATA([test.maude],
[
set show timing off .
set show advise off .
set trace off .
set break off .
set profile off .
load PetersonLeader .
frew [[42]] main(classes, "Main", emp) .
quit .
])
TEST_MAUDE([./PetersonLeader-cmc], test.maude, [examples])

l=`wc -l < ./PetersonLeader-cmc.out`
l=`expr $l - 2`
/bin/sed -e 1d -e 2d -e 3d -e "$l"q ./PetersonLeader-cmc.out > ./output
AT_CHECK([cmcvalid ./output], [0], [ignore], [])

AT_CLEANUP
