AT_SETUP([meta-Fibonacci-42])
cp ${abs_srcdir}/examples/Fibonacci.maude .
AT_DATA([test.maude],
[
set show timing off .
set show advise off .
set trace off .
set break off .
set profile off .
load Fibonacci .
load creol-metaexec .
reduce simulate('PROGRAM, upTerm(main(classes, "FibTester", int(10))), 42, 112) .
quit .
])
TEST_MAUDE([./meta-Fibonacci-42], test.maude, [examples])

l=`wc -l < ./Fibonacci-meta.out`
l=`expr $l - 2`
/bin/sed -e 1d -e 2d -e 3d -e "$l"q ./meta-Fibonacci-42.out > ./output
AT_CLEANUP

