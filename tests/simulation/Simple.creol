interface Console
begin
  with Any op print(in result: String)
end

class Console implements Console
begin
  var output : List[String] := nil
  with Any op print(in newstring: String) == output := output |- newstring
end

class Hello ( repetitions_init : Int)
begin
  var console: Console
  op init == console := new Console
  op run == 
    var x : Int;
    x := repetitions_init; 
  
    if (x > 0 ) then
       console.print("hello, world";) ;
       x := x - 1 ;
        if (x > 0 ) then
          console.print("hello, world2";) ;
          x := x - 1 
        end
    end
    
end
